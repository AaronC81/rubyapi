<div class="method" id="<%= method.anchor %>">
  <div class="method__header">
    <div class="method__sequence">
      <% unless method.call_sequence.empty? %>
        <% method.call_sequence.each do |seq| %>
          <h4><%= link_to seq, object_path(version: ruby_version, anchor: method.anchor) %></h4/>
        <% end %>
      <% else %>
        <h4><%= link_to method.name, object_path(version: ruby_version, anchor: method.anchor) %></h4>
      <% end %>
    </div>
    <div class="method__decorators">
      <%= render partial: 'layouts/type', locals: { object: method } %>
      <a href="<%= github_url(method) %>" target="_blank" class="type type--github" data-tippy="View source on Github" data-tippy-arrow="true"/><i class="fab fa-github"></i></a>
    </div>
  </div>
  <% if method.description.empty? %>
    <div class="method__description--empty">No documentation available</div>
  <% else %>
    <%= raw method.description %>
  <% end %>
</div>
