doctype html
html
  head
    title= content_for?(:title) ? "#{yield(:title)} (v#{ruby_version}) - Ruby API" : "Ruby API (v#{ruby_version})"
    =csrf_meta_tags 
    =csp_meta_tag
    meta name="description" content="Easily find and browse Ruby classes, modules and methods"
    meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"
    link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Code+Pro|Source+Sans+Pro:400,600,700,900&display=swap"
    = stylesheet_pack_tag 'application'
    = javascript_pack_tag 'application', defer: true

  body class="#{"bg-red-600" if homepage?}"
    = render "layouts/header" unless homepage?
    = yield
